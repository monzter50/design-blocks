{
  "$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsoleLog": "error",
        "noEmptyInterface": "off",
        "noExplicitAny": "off"
      },
      "performance": {
        "noDelete": "error"
      },
      "complexity": {
        "noBannedTypes": "off"
      },
      "nursery": {
        "useGroupedTypeImport": "error",
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 120,
    "ignore": []
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  }
}
