{
  "name": "@design-blocks/root",
  "version": "0.0.0",
  "repository": "git@github.com:wootsbot/design-blocks.git",
  "author": "Jorge Luis Calleja A. - wootsbot",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "husky install",
    "build": "turbo run build",
    "bundlesize": "turbo run bundlesize",
    "dev": "turbo dev",
    "dev:example-basic": "turbo dev --filter=\"{./examples/basic}...\"",
    "clean": "turbo run clean",
    "lint:types": "turbo run lint:types",
    "lint:eslint": "eslint '**/*.{js,ts}'",
    "lint": "pnpm lint:eslint",
    "prettier:format": "prettier --config .prettierrc \"./**/*.+(js|ts|tsx)\" --write",
    "prettier": "prettier --config .prettierrc \"./**/*.+(js|ts|tsx)\" --check",
    "lint-staged": "lint-staged",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "version:dev": "changeset version --snapshot dev",
    "release:dev": "changeset publish --tag dev"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "pnpm run prettier"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@changesets/get-release-plan": "3.0.16",
    "@changesets/types": "5.2.1",
    "@commitlint/cli": "17.6.1",
    "@commitlint/config-conventional": "17.6.1",
    "@types/eslint": "8.37.0",
    "@types/node": "18.16.2",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "cross-env": "7.0.3",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "tsconfig": "workspace:*",
    "turbo": "1.9.3",
    "typescript": "5.0.4"
  },
  "packageManager": "pnpm@8.3.1",
  "pnpm": {
    "overrides": {
      "@emotion/native": "11.10.6",
      "@emotion/react": "11.10.6",
      "react-native-builder-bob": "0.20.4"
    }
  }
}
