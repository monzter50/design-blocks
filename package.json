{
  "name": "@design-blocks/root",
  "version": "0.0.0",
  "repository": "git@github.com:wootsbot/design-blocks.git",
  "author": "Jorge Luis Calleja A. - wootsbot",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16",
    "yarn": ">=3"
  },
  "workspaces": {
    "packages": [
      "example",
      "packages/*"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "husky install",
    "build": "turbo run build",
    "bundlesize": "turbo run bundlesize",
    "clean": "turbo run clean",
    "lint:types": "turbo run lint:types",
    "lint:eslint": "eslint '**/*.{js,ts}'",
    "lint": "yarn lint:eslint",
    "prettier:format": "prettier --config .prettierrc \"./**/*.+(js|ts|tsx)\" --write",
    "prettier": "prettier --config .prettierrc \"./**/*.+(js|ts|tsx)\" --check",
    "lint-staged": "lint-staged",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "version:dev": "changeset version --snapshot dev",
    "release:dev": "changeset publish --tag dev"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn run prettier",
      "yarn run lint:eslint"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@changesets/get-release-plan": "3.0.16",
    "@changesets/types": "5.2.1",
    "@commitlint/cli": "17.4.3",
    "@commitlint/config-conventional": "17.4.3",
    "@types/eslint": "8.4.3",
    "@types/node": "18.13.0",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "cross-env": "7.0.3",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "tsconfig": "workspace:*",
    "turbo": "1.8.2",
    "typescript": "4.9.4"
  },
  "packageManager": "yarn@3.3.1"
}
