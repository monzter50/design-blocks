{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "tsconfig.json",
        "package.json",
        "src/**"
      ],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "inputs": ["**/*.{js,ts,tsx}"]
    },
    "lint:fix": {
      "outputs": [],
      "inputs": ["**/*.{js,ts,tsx}"]
    },
    "bundlesize": {
      "dependsOn": ["^build", "lint"]
    },
    "clean": {
      "cache": false
    }
  }
}
